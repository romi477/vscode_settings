{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "odoo-13",
            "type": "python",
            "request": "launch",
            "noDebug": true,
            "python": "${command:python.interpreterPath}",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "program": "/opt/odoo/13/odoo-bin",
            "args": [
                "--config=${workspaceRoot}/odoo.conf",
                "--update=_base_kabs,_sale_order_import,_mail_communication",
            ],
            "cwd": "${workspaceRoot}",
        },
        {
            "name": "odoo-13-dubug",
            "type": "python",
            "request": "launch",
            "python": "${command:python.interpreterPath}",
            "stopOnEntry": false,
            "stopOnPoints": true,
            // "noDebug": false,
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "program": "/opt/odoo/13/odoo-bin",
            "args": [
                "--config=${workspaceRoot}/odoo.conf",
                // "--update=special_product",
            ],
            "cwd": "${workspaceRoot}",
        },
        {
            "name": "shell-13",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "stopOnPoints": true,
            "noDebug": true,
            "python": "${command:python.interpreterPath}",
            "console": "integratedTerminal",
            "program": "/opt/odoo/13/odoo-bin",
            "args": [
                "shell",
                "--config=${workspaceRoot}/odoo.conf",
                "--update=mail_communication",
                "--shell-interface=ipython",
            ],
        },
        {
            "name": "odoo-13-tests",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "stopOnPoints": false,
            "noDebug": true,
            "python": "${command:python.interpreterPath}",
            "console": "internalConsole",
            "internalConsoleOptions": "openOnSessionStart",
            "program": "/opt/odoo/13/odoo-bin",
            "args": [
                "--config=${workspaceRoot}/odoo.conf",
                "--test-enable",
                // "--init=l10n_us_states",
                "--test-tags=special_product,sale_margin_erosion",
                "--log-level=test",
                "--stop-after-init",
            ],
            "cwd": "${workspaceRoot}",
            "debugOptions": [
                "RedirectOutput",
            ],
        },
        {
            "name": "Coverage Run",
            "type": "python",
            "request": "launch",
            "noDebug": true,
            "python": "${command:python.interpreterPath}",
            "console": "internalConsole",
            "program": "-m",
            "args": [
                "coverage",
                "run",
                "--source=${workspaceRoot}/erp",
                "/opt/odoo/13/odoo-bin",
                "--config=${workspaceRoot}/odoo.conf",
                "--test-enable",
                // "--test-tags=/sale_order_addendums",
                // "--init=sale_order_import",
                "--log-level=test",
                "--stop-after-init",
            ],
            "cwd": "${workspaceRoot}",
            "debugOptions": [
            ]
        },
        {
            "name": "Coverage Report",
            "type": "python",
            "request": "launch",
            "stopOnEntry": false,
            "stopOnPoints": true,
            "python": "${command:python.interpreterPath}",
            "console": "internalConsole",
            "program": "-m",
            "args": [
                "coverage",
                "report",
                "-m"
            ],
            "cwd": "${workspaceRoot}",
        },
        {
            "name": "Pytest",
            "type": "python",
            "request": "launch",
            "noDebug": false,
            "python": "${command:python.interpreterPath}",
            "console": "internalConsole",
            "module": "pytest",
            "args": [
                "--odoo-config=${workspaceRoot}/odoo.conf",
                // "--tb=long",
                "--disable-pytest-warnings",
                "${workspaceRoot}/erp/",
                // "${workspaceRoot}/erp/sale_order_import/",
                // "${workspaceRoot}/erp/sale_cost_price_recalculate/",
                // "${workspaceRoot}/erp/sale_order_addendums/",
            ],
            "cwd": "${workspaceRoot}",
        },
    ],
}